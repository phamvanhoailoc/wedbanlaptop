@model IEnumerable<WebLaptop.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Mô tả</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.RoleName</td>
                    <td>@item.Desciption</td>
                    <td>
                        <a class="btn btn-info btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.Id">View</a>
                        <a class="btn btn-primary btn-xs waves-effect waves-light"asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-success btn-xs waves-effect waves-light"asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                       
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
