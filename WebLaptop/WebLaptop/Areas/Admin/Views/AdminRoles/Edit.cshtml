@model WebLaptop.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Chỉnh sửa quyền truy cập</h4>

<div class="card-content">
    <form asp-action="Edit" method="post" asp-route-id="@Model.Id" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Role Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Desciption</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Desciption" placeholder="Desciption">
            </div>
        </div>
       
        <div class="form-group margin-bottom-0">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info btn-sm waves-effect waves-light">Lưu thay đổi</button>
            </div>
        </div>
    </form>
</div>

