@model WebLaptop.Models.Tintuc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Xác nhận xóa tin tức</h4>
<table class="table table-hover no-margin">
    <tbody>
        <tr>
            <td>ID: </td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Tiêu đề: </td>
            <td>@Model.Title</i></td>
        </tr>
        <tr>
            <td>Ảnh</td>
            <td>
                <img width="200" height="200" src="~/images/tintuc/@Model.Thumb" alt="@Model.Title" />
            </td>
        </tr>
        <tr>
            <td>MetaDesc: </td>
            <td>@Model.MetaDesc</td>
        </tr>
        <tr>
            <td>Ngày tạo: </td>
            <td>@Model.CreateDate</td>
        </tr>
        <tr>
            <td>IsHot: </td>
            <td>@Model.IsHot</td>
        </tr>
        <tr>
            <td>IsNewfeed: </td>
            <td>@Model.IsNewfeed</td>
        </tr>
        <tr>
            <td>MetaKey: </td>
            <td>@Model.MetaKey</td>
        </tr>
        <tr>
            <td>Tags: </td>
            <td>@Model.Tags</td>
        </tr>

        <tr>
            <td>Nội dung: </td>
            <td>@Model.Scontent</td>
        </tr>
        <tr>
            <td>Xác nhận xóa</td>
            <td>
                <form asp-action="Delete" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Xác nhận xóa" class="btn btn-default" />
                </form>
            </td>

        </tr>
    </tbody>
</table>
