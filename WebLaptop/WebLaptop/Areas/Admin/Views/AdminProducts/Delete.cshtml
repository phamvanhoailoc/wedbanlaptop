@model WebLaptop.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Xác nhận xóa thông tin</h4>
<table class="table table-hover no-margin">
    <tbody>
        <tr>
            <td>ID: </td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Tên sản phẩm: </td>
            <td>@Model.ProducName</i></td>
        </tr>
        <tr>
            <td>Danh mục: </td>
            <td>@Model.Cat.CastName</td>
        </tr>
        <tr>
            <td>Giá: </td>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <td>Discount: </td>
            <td>@Model.Discount</td>
        </tr>
        <tr>
            <td>Tồn kho: </td>
            <td>@Model.UnitslnStock</td>
        </tr>
        <tr>
            <td>Ngày tạo: </td>
            <td>@Model.DateCreated</td>
        </tr>
        <tr>
            <td>Ngày chỉnh sửa: </td>
            <td>@Model.DateModified</td>
        </tr>
        <tr>
            <td>Tiêu đề: </td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>MetaDesc: </td>
            <td>@Model.MetaDesc</td>
        </tr>
        <tr>
            <td>BestSeller: </td>
            <td>@Model.BestSeller</td>
        </tr>
        <tr>
            <td>HomeFlag: </td>
            <td>@Model.HomeFlag</td>
        </tr>
        <tr>
            <td>MetaKey: </td>
            <td>@Model.MetaKey</td>
        </tr>
        <tr>
            <td>Tags: </td>
            <td>@Model.Tags</td>
        </tr>
        <tr>
            <td>Ảnh</td>
            <td>
                <img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
            </td>
        </tr>
        <tr>
            <td>Mô tả sản phẩm: </td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>Xác nhận xóa</td>
            <td>
                <form asp-action="Delete" asp-route-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Xác nhận xóa" class="btn btn-default" />
                </form>
            </td>

        </tr>
    </tbody>
</table>