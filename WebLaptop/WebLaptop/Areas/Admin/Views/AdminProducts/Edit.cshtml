@model WebLaptop.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Wizard With Form Validation</h4>
        <!-- /.box-title -->
        <!-- /.dropdown js__dropdown -->
        <form asp-controller="AdminProducts" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div id="tabsleft" class="tabbable tabs-left">
                <ul>
                    <li><a href="#tabsleft-tab1" data-toggle="tab">First</a></li>
                    <li><a href="#tabsleft-tab2" data-toggle="tab">Second</a></li>
                    <li><a href="#tabsleft-tab3" data-toggle="tab">Third</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane" id="tabsleft-tab1">
                        <div class="form-group">
                            <label for="emailfield">Tên sản phẩm</label>
                            <div class="controls">
                                <input type="text" asp-for="ProducName" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="namefield">Giá bán</label>
                                <div class="controls">
                                    <input type="text" asp-for="Price" class="form-control">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="namefield">Discount</label>
                                <div class="controls">
                                    <input type="text" asp-for="Discount" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="emailfield">Số lượng hàng tồn kho</label>
                            <div class="controls">
                                <input type="text" asp-for="UnitslnStock" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <select class="custom-select" asp-for="CatId" style="min-width=500px;" asp-items="ViewBag.DanhMuc">
                                <option value="" disabled selected>Chọn danh mục</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Ảnh</label>
                            <input type="file" name="fThumb" asp-for="Thumb">
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="switch primary">
                                <input type="checkbox" asp-for="Active">
                                <label for="Active">Public</label>
                            </div>
                            <div class="switch primary">
                                <input type="checkbox" asp-for="HomeFlag">
                                <label for="HomeFlag">HomeFlag</label>
                            </div>
                            <div class="switch primary">
                                <input type="checkbox" asp-for="BestSeller">
                                <label for="BestSeller">BestSeller</label>
                            </div>
                        </div>

                    </div>
                    <div class="tab-pane" id="tabsleft-tab2">
                        <div class="form-group">
                            <label for="emailfield">Title</label>
                            <div class="controls">
                                <input type="text" asp-for="Title" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="emailfield">MetaDesc</label>
                            <div class="controls">
                                <input type="text" asp-for="MetaDesc" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="emailfield">MetaKey</label>
                            <div class="controls">
                                <input type="text" asp-for="MetaKey" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tabsleft-tab3">
                        <div class="form-group">
                            <label for="emailfield">Mô tả</label>
                            <div class="controls">
                                <input type="text" asp-for="Description" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
    <!-- /.box-content -->
</div>


