@model WebLaptop.Models.Order

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Chỉnh sửa đơn hàng</h4>
<div class="card-content">
    <form asp-action="Edit" method="post"  asp-controller="AdminOrders" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Địa chỉ</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Address" placeholder="Địa chỉ">
            </div>
        </div>
        <div class="form-group">
            <select class="custom-select" asp-for="TransacStatus.Status"  asp-items="ViewBag.TransacStatusId">
                <option value="" disabled selected>Chọn trạng thái</option>
            </select>
        </div>

        <div class="form-group margin-bottom-0">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info btn-sm waves-effect waves-light">Lưu thay đổi</button>
            </div>
        </div>
    </form>
</div>

