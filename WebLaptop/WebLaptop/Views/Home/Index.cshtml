                    <div class="tab-content" id="best-sell">
                        <div class="tab-pane fade show active" id="new" role="tabpanel" aria-labelledby="new-tab">
                            <div class="product__slider owl-carousel">
                                @if (Model.Products != null && Model.Products.Count > 0)
                                {
                                    foreach (var item in Model.Products)
                                    {
                                        string url = $"/{item.Alias}-{item.Id}.html";
                                        <div class="product__item white-bg">
                                            <div class="product__thumb p-relative">
                                                <a href="@url" class="w-img">
                                                    <img src="~/images/products/@item.Thumb" alt="@item.Title">
                                                    <img class="second-img" src="~/images/products/@item.Thumb" alt="@item.Title">
                                                </a>
                                               
                                            </div>
                                            <div class="product__content text-center">
                                                <h6 class="product-name">
                                                    <a class="product-item-link" href="@url"> @item.ProducName</a>
                                                </h6>
                                                
                                                <span class="price">@item.Price.Value.ToString("#,###") VND</span>
                                            </div>
                                          
                                        </div>
                                    }
                                }



                            </div>
                        </div>
                        <div class="tab-pane fade" id="featured" role="tabpanel" aria-labelledby="featured-tab">
                            <div class="product__slider owl-carousel">
                                @if (allProducts != null)
                                {
                                    foreach (var item in allProducts)
                                    {
                                        string url = $"/{item.Alias}-{item.Id}.html";
                                        <div class="product__item white-bg">
                                            <div class="product__thumb p-relative">
                                                <a href="@url" class="w-img">
                                                    <img src="~/images/products/@item.Thumb" alt="@item.Title">
                                                    <img class="second-img" src="~/images/products/@item.Thumb" alt="@item.Title">
                                                </a>
                                           
                                            </div>
                                            <div class="product__content text-center">
                                                <h6 class="product-name">
                                                    <a class="product-item-link" href="@url">@item.ProducName</a>
                                                </h6>
                                                
                                                <span class="price">@item.Price.Value.ToString("#,###") VND</span>
                                            </div>                               
                                        </div>
                                    }
                                }


                            </div>
