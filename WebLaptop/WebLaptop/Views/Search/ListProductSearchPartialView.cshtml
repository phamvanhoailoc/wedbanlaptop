@model List<Product>

@if (Model != null && Model.Count() > 0)
{
    foreach (var item in Model)
    {
        string url = $"/{item.Alias}-{item.Id}.html";
        <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-4">
            <div class="product__item white-bg mb-30">
                <div class="product__thumb p-relative">
                    <a href="product-details.html" class="w-img">
                        <img src="~/images/products/@item.Thumb" alt="@item.Title">
                        <img class="second-img" src="~/images/products/@item.Thumb" alt="@item.Title">
                    </a>
                    <div class="product__action p-absolute">
                        <ul>
                            <li><a href="#" title="Add to Wishlist"><i class="fal fa-heart"></i></a></li>
                            <li><a href="#" title="Quick View" data-bs-toggle="modal" data-bs-target="#productModalId"><i class="fal fa-search"></i></a></li>
                            <li><a href="#" title="Compare"><i class="far fa-sliders-h"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="product__content text-center">
                    <h6 class="product-name">
                        <a class="product-item-link" href="@url">@item.ProducName</a>
                    </h6>
                    <span class="price">@item.Price.Value.ToString("#,###") VND</span>
                </div>

            </div>
        </div>
    }
}
